<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.algebra.caffiato">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IUK"
        android:usesCleartextTraffic="true">
        <activity
            android:name="hr.algebra.caffiato.ActivateDealActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name="hr.algebra.caffiato.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="hr.algebra.caffiato.FeedbackActivity"
            android:exported="false" />
        <activity
            android:name="hr.algebra.caffiato.AboutActivity"
            android:exported="false" />
        <activity
            android:name="hr.algebra.caffiato.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="hr.algebra.caffiato.RegisterActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name="hr.algebra.caffiato.LoginActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name="hr.algebra.caffiato.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>